@model IList<shareDoor.Models.House>
@{
    ViewBag.Title = "_AdminMain";
    Layout = "~/Views/Shared/_AdminView.cshtml";
}


<h1>Αγγελίες προς έγκριση</h1>
<hr />

<table class="table table-sm text-center">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ονομ/πώνυμο</th>
            <th scope="col">Email</th>
            <th scope="col">Περιοχή</th>
            <th scope="col">Ημ/νία Κατασκευής</th>
            <th scope="col">Ενέργειες</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model[i].User.FirstName @Model[i].User.LastName </td>
                <td>@Model[i].User.Email</td>
                <td>@Model[i].State.Name / @Model[i].Area.Name</td>
                <td>@Model[i].Created</td>
                <td>
                    <a class="btn btn-outline-info btn-sm" href="@Url.Action("EditAd","Admin", new { Id = Model[i].Id })"><i class="fas fa-edit"></i></a>
                    <a class="btn btn-outline-danger btn-sm" href="@Url.Action()" ><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }

    </tbody>
</table>


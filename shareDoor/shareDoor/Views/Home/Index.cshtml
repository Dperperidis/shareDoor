@{
    ViewBag.Title = "Home Page";
}
<div id="main-background">
    <div class="text-center" id="main-header">
        <h1 class="text-white font-weight-bold">Κάνε την κίνησή σου</h1>
        <h3 class="text-white">Βρες συγκάτοικο ή σπίτι για να μείνεις!</h3>
    </div>

    <div class="input-group mb-3 shadow">
        <i class="fas fa-search-location" id="icon"></i>
        <span id="input-text">Που θες να μείνεις;</span>
        <input type="text" class="form-control" id="main-input" placeholder="" aria-label="Recipient's username" aria-describedby="basic-addon2">

        <div class="input-group-append">
            <button class="btn btn-primary" type="button">Search</button>
        </div>
    </div>

</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                @Html.Partial("_LoginForm")
            </div>
        </div>
    </div>
</div>


@section styles {
    <style>
        #main-header {
            margin-top: 200px;
        }

        .fas {
            position: absolute;
            z-index: 10;
            font-size: 30px;
            top: 15px;
            left: 5px;
            opacity: 0.4;
        }

        span {
            position: absolute;
            z-index: 11;
            left: 40px;
            top: 20px;
        }

        #main-input {
            border-radius: 5px;
        }

        #main-input {
            border-radius: 5px;
        }
    </style>
}


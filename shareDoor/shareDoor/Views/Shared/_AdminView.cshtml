
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_AdminView</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Admin.css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", required: false)

</head>
<body>
    @Html.Partial("_AdminNavBar")
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 col-lg-2 d-none d-md-block bg-light position-fixed" style="height:100vh; background-color: #096e68!important;box-shadow: 1px 1px 4px 2px rgba(0,0,0,.75);">
                <div class="sidebar-sticky">                   
                    <div class="text-center">
                        <img src="@ViewBag.Photo" class="mt-3 img-fluid" />
                        <h5 class="text-white">Καλωσόρισες @ViewBag.NickName !</h5>
                    </div>
                  
                    <hr />
                    <ul class="nav flex-column admin-links ">
                        <li class="nav-item">
                            <a class="nav-link active text-white" href="#">
                                <i class="fas fa-home"></i>
                                <span data-feather="home"></span>
                                Αρχική Σελίδα<span class="sr-only">(current)</span>
                            </a>
                        </li>
                        <li class="nav-item ">                 
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-users"></i>
                                <span data-feather="file"></span>
                                Διαχείριση Χρηστών
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-white" href="#">
                                <i class="fas fa-gifts"></i>
                                <span data-feather="shopping-cart"></span>
                                Προνόμια
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-images"></i>
                                <span data-feather="users"></span>
                                Διαχείριση Φωτογραφιών
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-truck-moving"></i>
                                <span data-feather="bar-chart-2"></span>
                                Τελευταίες Κινήσεις
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a class="nav-link text-white" href="#">
                                <i class="fas fa-thumbs-up"></i>
                                <span data-feather="layers"></span>
                                Προτεινόμενα
                            </a>
                        </li>
                    </ul>

                </div>
            </nav>

            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
           
                @RenderBody()
            </main>
        </div>
    </div>

  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
